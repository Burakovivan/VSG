<Window x:Class="VSG.App.FileNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VSG.App"
        mc:Ignorable="d"
        Title="Window1" Height="112" Width="343">
    <Grid>
        <TextBox Name="FileName"  HorizontalAlignment="Left" Height="23" Margin="78,48,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="167"/>
        <Label Content="File name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,45,0,0"/>
        <Button Content="Continue" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="250,48,0,0" Height="23" Name="ContinueButton" Click="ContinueButton_Click"/>
        <TextBox Name="FolderName"  IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="78,10,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="167"/>
        <Label Content="Folder:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,7,0,0"/>
        <Button Content="Browse" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="250,10,0,0" Height="23"  Click="Button_Click"/>

    </Grid>
</Window>
